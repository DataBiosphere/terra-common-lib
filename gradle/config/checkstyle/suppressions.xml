<?xml version="1.0"?>
<!DOCTYPE suppressions PUBLIC
    "-//Checkstyle//DTD SuppressionFilter Configuration 1.2//EN"
    "https://checkstyle.org/dtds/suppressions_1_2.dtd">

<suppressions>
  <!--
    Terra: complexity measures are squishy and vague. Prefer to catch complexity in code review.
  -->
  <suppress checks="ClassFanOutComplexity"/>
  <!--
    Terra: complexity measures are squishy and vague. Prefer to catch complexity in code review.
  -->
  <suppress checks="CyclomaticComplexity"/>
  <!--
    Terra: complexity measures are squishy and vague. Prefer to catch complexity in code review.
  -->
  <suppress checks="ExecutableStatementCount"/>
  <!--
    Terra: final is considered optional for local vars.
  -->
  <suppress checks="FinalLocalVariable"/>
  <!--
    Terra: Spotless is canonical for indentation.
  -->
  <suppress checks="Indentation"/>
  <!--
    Terra: inner types out of order is OK, especially in tests.
  -->
  <suppress checks="InnerTypeLast"/>
  <!--
    Terra: less strict about javadoc.
  -->
  <suppress checks="JavadocStyle"/>
  <!--
    Terra: less strict about javadoc.
  -->
  <suppress checks="JavadocType"/>
  <!--
    Terra: complexity measures are squishy and vague. Prefer to catch complexity in code review.
  -->
  <suppress checks="JavaNCSS"/>
  <!--
    Terra: Spotless is canonical for line length.
  -->
  <suppress checks="LineLength"/>
  <!--
    Terra: there are legitimate cases (esp. in tests) where multiple string literals are okay.
  -->
  <suppress checks="MultipleStringLiterals"/>
  <!--
    Terra: multiple returns are OK.
  -->
  <suppress checks="ReturnCount"/>
  <!--
    Terra: Spotless is canonical for whitespace.
  -->
  <suppress checks="WhitespaceAround"/>
  <!--
  Terra: Classes may not need to be final. Prefer to catch complexity in code review.
  -->
  <suppress checks="FinalClass"/>
  <!--
  Terra: Constant names may not align to conventions. Prefer to catch complexity in code review.
  -->
  <suppress checks="ConstantName"/>
  <!--
  Terra: Prefer to catch complexity in code review.
  -->
  <suppress checks="AnnotationUseStyle"/>
</suppressions>
